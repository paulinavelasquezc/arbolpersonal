@model arboldecisiones.Models.Category

@{
    ViewBag.Title = "Creación de tipos de botellas";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script src="~/Scripts/ScriptView/SearchClassification.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<!--<link href="~/Content/CSS/CSSView/TreeProcess.css" rel="stylesheet" />-->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />


<div class="container-fluid py-2">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header" style="background-color:#000;">
                    <div class="row mt-4" style="display: flex; justify-content: center; align-items: center;">
                        <div class="col-md-3 text-center">
                            <img src="~/Content/Images/System/whitelogo.png" style="width:70%" />
                        </div>
                        <div class="col-md-9">
                            <p class="h2 font-weight-bolder text-yellow" align="right">Creación de botellas</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row ms-4">
                        <div class="col-md-12">
                            <p class="h5 font-weight-bolder text-yellow">Llena los campos para crear un nuevo tipo de botella...</p>
                        </div>
                    </div>
                    <br />
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Nombre de la botella</label>
                                    <input type="text" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Proceso</label>
                                    <input type="text" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Nombre defectos</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Ubicación</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Usuario</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Activo</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group input-group-outline my-3">
                                        <label class="form-label">Actualización</label>
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer mb-3 borderYellow">
                    <a href="http://www.o-i.com/" target="_blank"><img style="width:50%; height:auto;" class="mx-auto d-block img-fluid" src="~/Content/Images/System/MWMwhite.png" alt="Gestión de Clientes" /></a>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

