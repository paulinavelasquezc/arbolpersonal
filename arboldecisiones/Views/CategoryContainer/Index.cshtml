<h2>Categoría del envase</h2>

<p>
    @Html.ActionLink("Crear", "Create", null, new { @class = "btn-create" })
</p>


@Html.DropDownList("ProcessID", null, htmlAttributes: new { @class = "form-control" })

<div class="col-xs-12 col-sm-12 col-md-12">
    <div id="ViewParcial">
    </div>
</div>

<script type="text/javascript">
    $('#ProcessID').on('change', function () {

        var ProcessId = $("#ProcessID option:selected").val();

        $.get("ViewParcialListar", { _processID: ProcessId }, function (data) {

            $("#ViewParcial").empty();
            $("#ViewParcial").html(data);
        });
    });
</script>


